<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartinhalerbluetooth.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/data"
        android:layout_height="wrap_content"
        android:text="Data Recived from HC05 Appear Here!"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:layout_margin="8dp"
        android:textSize="16sp"

    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data"
        android:id="@+id/search_button"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:text="Search Device"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_button"
        android:layout_below="@+id/search_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Close Connection"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/close_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/reminderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/reminderBtnString" />

</RelativeLayout>
